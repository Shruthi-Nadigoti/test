@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.numberOfLifts = 8;
    ViewBag.assignedLiftName = "A";
    ViewBag.Status = "Up";
}
@Styles.Render("~/Content/Custom/Elevator")

<h2>Home</h2>
<div style="width:1000px;height:500px">
    @{

        for (var i = 0; i < ViewBag.numberOfLifts; i++)
        {

            <div class="lifts floatleft">
                Selected Lift floors: <div id=@i>
                    <div style="border-style:solid;border-width:thin;border-color:white;"> 1 3 4</div>
                    <div style="margin-top:70px">
                        Alarm : Status
                        Status: @ViewBag.Status
                        <br />
                        <br />
                        Time: 21-08-2018 11:30 am
                    </div>
                </div>
            </div>

        }
    }
</div>
<div class="floatleft" style="height:200px;width:200px;border-width:10px; margin-left: 200px;margin-top:50px;">
    Enter current floor: <select>
        <option value="G">G</option>
        <option value="B1">B1</option>
        <option value="B3">B3</option>
        <option value="B2">B2</option>
        @{
            for (int i = 1; i < 15; i++)
            {
                <option value=@i>@i</option>
            }
        }


    </select>
    <br /><br /><br />
    @{
        for (var i = 1; i < 10; i++)
        {
            <button type="button" class="keypad">@i</button>
        }
    }
    <button type="button" class="keypad">B</button>
    <button type="button" class="keypad">0</button>
    <button type="button" class="keypad">G</button>
</div>
<div class="output">
    Assigned lift is:@ViewBag.assignedLiftName
</div>
<div style="clear:both;">
</div>